{
  "name": "reactutilities",
  "author": "Given Suman",
  "license": "MIT",
  "scripts": {
    "lint": "npx eslint src",
    "lint:fix": "npm run lint src --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npx prettier src --write",
    "install:stores": "(cd ./stores && pnpm install);",
    "test:stores": "(cd ./stores && pnpm test);",
    "install:hooks": "(cd ./hooks && pnpm install);",
    "test:hooks": "(cd ./hooks && pnpm test);",
    "install:classnames": "(cd classnames && pnpm install);",
    "test:classnames": "(cd classnames && pnpm test);",
    "install:css": "(cd css && pnpm install);",
    "test:css": "(cd css && pnpm test);",
    "install:controls": "(cd controls && pnpm install);",
    "test:controls": "(cd controls && pnpm test);"
  },
  "devDependencies": {
    "@types/react": "^18.0.31",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tree-shaking": "^1.10.0",
    "prettier": "^2.8.7",
    "typescript": "^5.0.2"
  }
}
